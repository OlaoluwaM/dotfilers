{
  "name": "dotfilers",
  "version": "0.0.0-semantic-release",
  "description": "A CLI tool that automates the management of system configuration files (dotfiles)",
  "main": "dist/index.js",
  "type": "module",
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "lint": "eslint src/**/*.ts --ignore-pattern src/lib/**/*.ts",
    "lint:test": "eslint tests/**/*.ts",
    "lint:lib": "eslint src/lib/**/*.ts",
    "invoke": "node --experimental-specifier-resolution=node --loader ts-node/esm src/index.ts",
    "invoke:file": "node --experimental-specifier-resolution=node --loader ts-node/esm --",
    "prebuild": "rm -rf dist",
    "build": "tsc -p ./tsconfig.prod.json && tsc-alias -p ./tsconfig.json",
    "postbuild": "./dist-patch.sh && npm run bundle",
    "bundle": "esbuild ./dist/index.js  --bundle --outfile=./bin/build.cjs --format=cjs --platform=node --log-level=error",
    "test:setup": "./setup-test-data/setup.sh",
    "test": "npm run test:setup && npm run test:lib && NODE_OPTIONS=--experimental-vm-modules jest",
    "test:ci": "npm run test:setup && npm run test:lib && NODE_OPTIONS=--experimental-vm-modules CI=true jest",
    "test:single": "npm run test:setup && NODE_OPTIONS=--experimental-vm-modules jest --testPathPattern --",
    "test:silent": "npm run test:setup && npm run test:lib:silent && NODE_OPTIONS=--experimental-vm-modules jest --silent",
    "test:single:silent": "npm run test:setup && NODE_OPTIONS=--experimental-vm-modules jest --silent --testPathPattern --",
    "test:coverage": "npm run test -- --coverage",
    "test:lib": "FOR_LIB=true NODE_OPTIONS=--experimental-vm-modules jest --testPathPattern src/lib/**/test.ts",
    "test:lib:silent": "FOR_LIB=true NODE_OPTIONS=--experimental-vm-modules jest --silent",
    "test:lib:single": "FOR_LIB=true NODE_OPTIONS=--experimental-vm-modules jest --detectOpenHandles --testPathPattern --",
    "test:coverage:lib": "FOR_LIB=true npm run test:lib -- --coverage",
    "test:lib:single:silent": "FOR_LIB=true NODE_OPTIONS=--experimental-vm-modules jest --silent --detectOpenHandles --testPathPattern --"
  },
  "keywords": [
    "dotfilers",
    "dotfiles",
    "dots",
    "dotfiles management",
    "system configuration",
    "system configuration file management"
  ],
  "author": "Olaoluwa Mustapha <olaolum@pm.me> (https://www.github.com/OlaoluwaM)",
  "license": "MIT",
  "bin": {
    "dfs": "dist/index.js",
    "dotfilers": "dist/index.js"
  },
  "homepage": "https://github.com/OlaoluwaM/dotfilers",
  "bugs": {
    "url": "https://github.com/OlaoluwaM/dotfilers/issues"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.3.0",
    "@commitlint/config-conventional": "^17.3.0",
    "@jest/globals": "^29.3.1",
    "@jest/types": "^29.3.1",
    "@semantic-release/changelog": "^6.0.2",
    "@types/eslint-config-prettier": "^6.11.0",
    "@types/fs-extra": "^9.0.13",
    "@types/is-glob": "^4.0.2",
    "@types/jest": "^29.2.5",
    "@types/micromatch": "^4.0.2",
    "@types/node": "^18.11.18",
    "@types/prompts": "^2.4.2",
    "@types/ramda": "^0.28.20",
    "@typescript-eslint/eslint-plugin": "^5.47.1",
    "@typescript-eslint/parser": "^5.47.1",
    "esbuild": "^0.16.12",
    "eslint": "^8.30.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-import-resolver-typescript": "^3.5.2",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jest": "^27.1.7",
    "husky": "^8.0.2",
    "jest": "^29.3.1",
    "jest-extended": "^3.2.0",
    "node-notifier": "^10.0.1",
    "prettier": "^2.8.1",
    "ts-import-patch": "^1.0.1",
    "ts-jest": "^29.0.3",
    "ts-node": "^10.9.1",
    "tsc-alias": "^1.8.2",
    "typescript": "^4.9.4"
  },
  "dependencies": {
    "chalk": "^5.2.0",
    "fp-ts": "^2.13.1",
    "fs-extra": "^11.1.0",
    "globby": "^13.1.3",
    "io-ts": "^2.2.20",
    "is-glob": "^4.0.3",
    "micromatch": "^4.0.5",
    "monocle-ts": "^2.3.13",
    "ora": "^6.1.2",
    "prompts": "^2.4.2",
    "ramda": "^0.28.0",
    "readdirp": "^3.6.0",
    "simple-git": "^3.15.1",
    "ts-pattern": "^4.0.6",
    "type-fest": "^3.5.0"
  }
}
